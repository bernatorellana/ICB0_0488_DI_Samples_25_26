<Window x:Class="NumericUpDown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumericUpDown" xmlns:view="clr-namespace:NumericUpDown.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <view:NumericUpDown Grid.Row="0" x:Name="num" Valor="12" Max="{Binding ElementName=numMax,Path=Valor,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Min="{Binding ElementName=numMin,Path=Valor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></view:NumericUpDown>
        <view:NumericUpDown Grid.Row="1" x:Name="numMin" Valor="0" Max="100" Min="0"></view:NumericUpDown>
        <view:NumericUpDown Grid.Row="2" x:Name="numMax" Valor="100" Max="100" Min="0"></view:NumericUpDown>
    </Grid>
</Window>
