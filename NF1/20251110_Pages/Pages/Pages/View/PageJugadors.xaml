<Page x:Class="Pages.PageJugadors"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageJugadors"
      Loaded="Page_Loaded"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" FontSize="20" Text="PLAYERS"></TextBlock>

        <Button Grid.Row="2" Click="btnNew_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" x:Name="btnNew">New</Button>
        
        <ListView Grid.Row="1" x:Name="lsvJugadors" MouseDoubleClick="lsvJugadors_MouseDoubleClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="100" Source="{Binding UrlFoto}"></Image>
                        <TextBlock Width="100" Text="{Binding Dorsal}" />
                        <TextBlock Width="300" Text="{Binding Cognoms}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </Grid>
</Page>
