<Window x:Class="_20250915_HelloWorldWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20250915_HelloWorldWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBox x:Name="txtCognom" HorizontalAlignment="Left" 
                 Width="300" 
                 VerticalAlignment="Center"
                 KeyUp="txtCognom_KeyUp"
                 Margin="10"></TextBox>
        <StackPanel Orientation="Horizontal">
            <Label x:Name="lblSalutacio" HorizontalAlignment="Center" VerticalAlignment="Center">Hola bon dia !!!!</Label>
        <Button x:Name="btnHola" HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="10"
                Click="btnHola_Click"
                >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFD23232"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background> Hola
        </Button>
    </StackPanel>
 
    </StackPanel>
</Window>
