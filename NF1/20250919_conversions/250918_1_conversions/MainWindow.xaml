<Window x:Class="_250918_1_conversions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_250918_1_conversions"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="txbInt" Grid.Row="0" Grid.Column="0" Margin="10"></TextBox>
        <TextBox x:Name="txbMoney" Grid.Row="1" Grid.Column="0" Margin="10"></TextBox>
        <TextBox x:Name="txbDate" Grid.Row="2" Grid.Column="0" Margin="10"></TextBox>

        <Button x:Name="btnInt" Click="btnInt_Click" Grid.Row="0" Grid.Column="1" Padding="10" Margin="10">Transforma</Button>
        <Button x:Name="btnMoney" Click="btnMoney_Click" Grid.Row="1" Grid.Column="1" Padding="10" Margin="10">Transforma</Button>
        <Button x:Name="btnDate" Click="btnDate_Click" Grid.Row="2" Grid.Column="1" Padding="10" Margin="10">Transforma</Button>

        <Label x:Name="lblInt" Grid.Row="0" Grid.Column="2" Margin="10"></Label>
        <Label x:Name="lblMoney" Grid.Row="1" Grid.Column="2" Margin="10"></Label>
        <Label x:Name="lblDate" Grid.Row="2" Grid.Column="2" Margin="10"></Label>
    </Grid>
</Window>
