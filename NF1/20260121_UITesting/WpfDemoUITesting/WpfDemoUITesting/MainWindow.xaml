<Window x:Class="WpfDemoUITesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoUITesting"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <TextBox Width="100" x:Name="txtOp1"></TextBox>
        <TextBox Width="100" x:Name="txtOp2"></TextBox>
        <Button Click="Button_Click">=</Button>
        <TextBox Width="100" x:Name="txtRes"></TextBox>
    </StackPanel>
</Window>
