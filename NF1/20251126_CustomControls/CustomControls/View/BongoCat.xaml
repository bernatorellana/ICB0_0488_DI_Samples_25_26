<UserControl x:Class="CustomControls.View.BongoCat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControls.View"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800"
             Loaded="UserControl_Loaded"              
             >
    <Grid>
        <Canvas>

            <Image x:Name="imgTerra"  Width="100" Height="100" Margin="350 150"    />

            <!--<Ellipse Width="100" Height="100" Margin="350 150" Fill="Blue"></Ellipse>-->

            <Ellipse Width="20" Height="20"   Margin="390 190" Fill="Salmon">
                <Ellipse.RenderTransform>
                    <TransformGroup >
                        <TranslateTransform X="100"></TranslateTransform>
                        <RotateTransform  x:Name="rotacio" Angle="180" CenterX="10" CenterY="10"></RotateTransform>
                    </TransformGroup>
                </Ellipse.RenderTransform>
            </Ellipse>
        </Canvas>

    </Grid>
</UserControl>
