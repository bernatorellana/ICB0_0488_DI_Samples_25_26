<Window x:Class="CustomControlVolume.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomControlVolume" xmlns:view="clr-namespace:CustomControlVolume.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <StackPanel>

        <StackPanel Orientation="Horizontal" x:Name="equalitzador">
        
        </StackPanel>

        <view:UCControlVolum Value="{Binding ElementName=slider, Path=Value}" Height="100" Width="20"></view:UCControlVolum>
        <Slider x:Name="slider" Minimum="0" Maximum="100" Width="200" />
    </StackPanel>
</Window>
