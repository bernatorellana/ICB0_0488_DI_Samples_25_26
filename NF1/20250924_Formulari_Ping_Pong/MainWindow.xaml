<Window x:Class="_20250924_Formulari_Ping_Pong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20250924_Formulari_Ping_Pong"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Background="LemonChiffon"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="txbName" Margin="20" VerticalAlignment="Center" Background="LightGray" Grid.Column="0" Grid.Row="0" TextChanged="txbName_TextChanged"></TextBox>
        <Button Padding="10" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click" x:Name="btnAdd">Add</Button>
        <ListBox SelectionChanged="lsbLeft_SelectionChanged" Background="LightGray" Margin="20" x:Name="lsbLeft" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"></ListBox>
        <ListBox SelectionChanged="lsbLeft_SelectionChanged" Background="LightGray" Margin="20" x:Name="lsbRight" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2"></ListBox>
        <Button x:Name="btnLeft" Click="btnLeft_Click" Padding="10" Grid.Column="1" Grid.Row="1" FontFamily="Segoe MDL2 Assets" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center">&#xE72B;</Button>
        <Button x:Name="btnRight" Click="btnRight_Click" Padding="10" Grid.Column="1" Grid.Row="2" FontFamily="Segoe MDL2 Assets" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center">&#xE72A;</Button> 
    </Grid>
</Window>
