<UserControl x:Class="Cartes.View.UCCarta"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cartes.View"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="800" 
             SizeChanged="UserControl_SizeChanged"
             Loaded="UserControl_Loaded"
             TouchDown="UserControl_TouchDown"
             >
    <Border x:Name="borde"  BorderBrush="Black" BorderThickness="3">
    <Grid Background="White">
        

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        

        <Grid Grid.Column="0" Grid.Row="0" Margin="30" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock x:Name="txtRang1" FontSize="50" Grid.Row="0">2</TextBlock>
            <TextBlock x:Name="txtPal1"  FontSize="50" Grid.Row="1">♣</TextBlock>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="2" Margin="30" >
             <Grid.RenderTransform>
                 <ScaleTransform ScaleY="-1" CenterY="80"></ScaleTransform>  
            </Grid.RenderTransform> 
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock x:Name="txtRang2" FontSize="50" Grid.Row="0">2</TextBlock>
            <TextBlock x:Name="txtPal2"  FontSize="50" Grid.Row="1">♣</TextBlock>
        </Grid>

        <Image x:Name="imgBack" Visibility="Visible" 
               TouchDown="UserControl_TouchDown"
               Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="3" Stretch="UniformToFill" Source="/Resources/back.png" />

    </Grid>
    </Border>

</UserControl>
